/* pages/student/student.wxss */
.head {
  display: flex;
  align-items: center;
  background-color: #0080ff;
  font-size: 26rpx;
  height: 44px;
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.search {
  display: flex;
  background-color: #fff;
  border-radius: 50rpx;
  align-items: center;
  padding: 10rpx;
  flex: 1;
  height: 24px;
}

.icon_info {
  width: 44rpx;
  height: 44rpx;
  padding-left: 13.5px;
  padding-right: 15px;
}
.select_school {
  font-size: 28rpx;
  color:#888888;
  padding-left: 15px;
  padding-top: 17.5px;
  padding-bottom: 10px;
}

.divider {
  height: 1px;
  margin-left: 10px;
  background-color: #CCCCCC;
}

.content_list {
  background-color: #fff;
  font-size: 17px;
}

.content_info {
  padding: 28rpx;
  color: #666666;
}
.content_info_press {
  background-color: #000;
}
