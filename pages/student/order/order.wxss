/* pages/student/order/order.wxss */

.head {
  height: 44px;
  display: flex;
  align-items: center;
  background-color: #fff;
  flex-direction: column;
}

.status {
  background-color: #09bb07;
  height: 20px;
  border-radius: 30px;
  color: #fff;
  font-size: 26rpx;
  align-items: center;
  display: flex;
  padding-right: 10px;
  margin-right: 9.5px;
}

.status_img {
  height: 10px;
  width: 10px;
  margin-left: 10px;
  margin-right: 10px;
}

.exactly_content {
  display: flex;
  height: 43px;
  align-items: center;
}

.wrap_content {
  display: flex;
  padding-top: 10px;
  padding-bottom: 10px;
}

/*咨询地点*/
.location {
  flex: 1;
  word-break: break-all;
  font-size: 28rpx;
  color: #666666;
  line-height: 20px;
}

.remark {
  flex: 1;
  word-break: break-all;
  color: #353535;
  font-size: 28rpx;
  line-height: 20px;
}

/*评价*/

.appraise {
  flex: 1;
  word-break: break-all;
  color: #353535;
  font-size: 28rpx;
  line-height: 20px;
  margin-left: 15px;
  margin-right: 15px;
  margin-bottom: 15px;
}

.btn {
  height: 44px;
  margin-left: 15px;
  margin-right: 15px;
  background-color: #0080ff;
  color: #eee;
  font-size: 34rpx;
  margin-top: 30px;
}
