/* pages/student/mine/mine.wxss */

.top_tab {
  display: flex;
  height: 44px;
  align-items: center;
  background: #fff;
  border-bottom: 1px solid #ededed;
}

.tab_content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

.tab_select {
  display: flex;
  font-size: 30rpx;
  height: 100%;
  align-items: center;
  border-bottom: 2px solid #0080ff;
  color: #0080ff;
}

.tab_unselect {
  font-size: 30rpx;
  display: flex;
  height: 100%;
  align-items: center;
  color: #353535;
}
