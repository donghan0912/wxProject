/* pages/assistant/timedetail/timedetail.wxss */

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.time {
  margin-top: 20px;
  margin-bottom: 10px;
  font-size: 34rpx;
  color: #353535;
}

.date {
  margin-bottom: 10px;
  font-size: 28rpx;
  color: #888;
}

.switch_btn {
  width: 54px;
  margin-top: 30px;
  margin-right: 12px;
}

.exactly_content {
  display: flex;
  height: 43px;
  align-items: center;
}

.wrap_content {
  display: flex;
  padding-top: 10px;
  padding-bottom: 10px;
}

.content {
  width: 90px;
  margin-left: 15px;
  color: #666;
  font-size: 34rpx;
}

.remark {
  flex: 1;
  word-break: break-all;
  color: #353535;
  font-size: 34rpx;
}

.order_time {
  display: flex;
  height: 30px;
  align-items: center;
  color: #888;
  font-size: 24rpx;
}

.empty_view {
  display: flex;
  align-items: center;
  background: #fff;
  height: 162px;
  font-size: 34rpx;
  margin-top: 10px;
}

.empty_content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
