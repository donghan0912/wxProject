/* pages/assistant/info/info.wxss */

.avatar_style {
  display: flex;
  background-color: #fff;
  align-items: center;
  height: 76px;
  margin-bottom: 10px;
}

.arrowright {
  height: 32rpx;
  width: 32rpx;
  padding-left: 15px;
  padding-right: 15px;
}

.body {
  display: flex;
  align-items: center;
  height: 44px;
  font-size: 34rpx;
  color: #353535;
}

.location {
  flex: 1;
  margin-left: 35.5px;
  font-size: 28rpx;
  color: #888;
  line-height: 36rpx;
  text-align: right;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.school {
  display: block;
  font-size: 28rpx;
  color: #888;
  line-height: 36rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  flex: 1;
  margin-left: 35.5px;
}
